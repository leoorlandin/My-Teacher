{% extends "layout.njk" %}

{% block content %}
  <div class="card">
    <section class="avatar" style="background: url({{teacher.avatar_url}}) no-repeat center center / cover"></section>

    <section class="details">
      <h3>Detalhes</h3>

      <div class="item">
        <div>Professor</div>
        <div>{{teacher.name}}</div>
      </div>

      <div class="item">
        <div>Idade</div>
        <div>{{teacher.birth}}</div>
      </div>

      <div class="item">
        <div>Grau de escolaridade</div>
        <div>
          {% if teacher.formation == "high-school" %}
            Ensino Médio completo
          {% endif %}
          {% if teacher.formation == "college" %}
            Ensino Superior completo
          {% endif %}
          {% if teacher.formation == "master" %}
            Mestrado completo
          {% endif %}
          {% if teacher.formation == "doctor" %}
            Doutorado completo
          {% endif %}
        </div>
      </div>

      <div class="item">
        <div>Tipo de aula</div>
        <div>
          {% if teacher.lecture == "remote" %}
            À Distância
            {%else%}
            Presencial
          {% endif %}
        </div>
      </div>

      <div class="item">
        <div>
          Acompanhamento
          <div>
            {% for area in teacher.areas %}
              <span>{{area}}</span>
            {% endfor %}
          </div>
        </div>

      </div>

      <div class="item">
        <div>Desde</div>
        <div>{{teacher.created_at}}</div>
      </div>

      <a href="/teachers/{{teacher.id}}/edit" class="button">Editar</a>

    </div>
  </section>
</div>

{% endblock content %}